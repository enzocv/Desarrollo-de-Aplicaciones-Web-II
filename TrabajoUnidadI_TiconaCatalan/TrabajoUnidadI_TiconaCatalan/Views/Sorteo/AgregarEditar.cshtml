@model TrabajoUnidadI_TiconaCatalan.Models.CATEGORIAS
@{
    ViewBag.Title = (Model.IDCATEGORIA > 0 ? Model.NOMBRECATEGORIA : "Nuevo registro");
}

<h2>Agregar | Editar</h2>

@using (Html.BeginForm("Guardar", "Sorteo", FormMethod.Post, new { @id = "frm-persona" }))
{
    @Html.HiddenFor(x=>x.IDCATEGORIA)
    <div class="panel panel-default">
        <div class="panel-heading">Informacion de la Categoria</div>
        <div class="panel-body">
			<div class="form-group">
				@Html.Label("Nombre Categoria:")
				@*@Html.(x => x.NOMBRECATEGORIA, new { @class = "form-control" })*@

				<select name="NOMBRECATEGORIA" class="form-control">
					<option @(Model.NOMBRECATEGORIA == "" ? "Selected" : "") value="">-Seleccione-</option>
					<option @(Model.NOMBRECATEGORIA == "A" ? "Selected" : "") value="A">Categoria A</option>
					<option @(Model.NOMBRECATEGORIA == "B" ? "Selected" : "") value="B">Categoria B</option>
					<option @(Model.NOMBRECATEGORIA == "C" ? "Selected" : "") value="C">Categoria C</option>
					@Html.ValidationMessageFor(x => x.NOMBRECATEGORIA, null, new { @class = "label label-danger" })
				</select>
			</div>
        </div>
    </div>
    <div class="text-right">
        <button type="submit" class="btn btn-primary">Grabar</button>
        <a href="~/Sorteo" class="btn btn-danger">Cancelar</a>
    </div>
}