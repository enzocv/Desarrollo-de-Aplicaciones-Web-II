@model Laboratorio5_LINQ_Catalan.Models.ClsAlumnoNota
@{
    Layout = null;
    int id = 1;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Notas</title>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
</head>
<body>
    <div>
        @using (Html.BeginForm("Index", "Ejercicio", FormMethod.Post))
        {
            <h1>Listar Alumnos</h1>
            <br />
            @Html.TextBoxFor(m => m.busqueda)
            <br />
            <br />
            <input type="submit" value="Buscar" />
            <br />
        }
    </div>

    <div>
        <br />
        <table>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Nota</th>
                <th>Condición</th>
            </tr>
            @for (int i = 0; i < Model.nombreA.Count(); i++)
            {
                <tr>
                    <td>@id</td>
                    <td>@Model.nombreA[i]</td>
                    <td>
                        @if (Model.notaA[i] >= 10.5)
                        {
                            <spam style="color:forestgreen;">@Model.notaA[i]</spam>
                        }
                        else { <spam style="color:firebrick;">@Model.notaA[i]</spam> }
                    </td>
                    <td>
                        @if (Model.notaA[i] >= 10.5)
                        {
                            <spam style="color:forestgreen;">Aprobado</spam>
                        }
                        else
                        { <spam style="color:firebrick;">Desaprobado</spam>}
                    </td>
                </tr>
                id++;
            }
        </table>
    </div>
</body>
</html>
